<div class="content">
  <%= render 'search_bar' %>
  <div class="text-container">
    <h1>Rooms type</h1>
    <% @rooms.each_with_index do |room, i| %>
      <div class='rooms'>
        <h1><%= "#{ room.class.name.titleize }" %></h1>
        <%= image_tag "pic#{ i + 17 }.jpg" %><br/>
      </div>
    <% end %>
  </div>
</div>